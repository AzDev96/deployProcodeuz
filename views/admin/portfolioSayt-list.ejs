                    <th>Картинка</th>
                    <th>Сылка</th>
                    <th>Действия</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
          </div>
        </div>
                 <!--  ==========   Портфолио Лого  ========== -->
        <div class="col-md-12">
          <!-- general form elements disabled -->
          <div class="card card-info">
            <div class="card-header">
              <h3 class="card-title">Список портфолио Лого</h3>
            </div>
            <div class="card-body">
