                            <a href="/admin/delete-logo/<%= data.id %>"  class="btn btn-danger">  Удалить</a>
                          </td>
                        </tr>
                    <% }) %> 
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>#ID</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Картинка</th>
                    <th>Сылка</th>
                    <th>Действия</th>
                  </tr>
